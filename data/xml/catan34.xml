<?xml version="1.0" encoding="UTF-8"?>

<!--

For a Catan map, the resource hexes and vertices are all "hexes".  Vertex hexes
surround resource hexes in a way that looks like each vertex "hex" sits where three "resource hex" sides meet.

The vertex hexes can be enumerated algorithmically:

if ((hy + hx) % 3) == 0
   resource
else
   vertex
 


-->
<map name="catan" game="Settlers of Catan">
  <copyright>reserved</copyright>
  <size><vector hx="13" hy="9" /></size>
  <origin><vector hx="6" hy="7" /></origin>
  <terrains>
    <terrain type="HexMapView.Terrain.SuperBorder" id="superborder" name="superborder">
      <locations>
	<!-- center -->
	<vector hx="0" hy="0"/>
	
	<!-- first ring -->
	<vector hx="1" hy="-1"/>
	<vector hx="2" hy="1"/>
	<vector hx="1" hy="2"/>
	<vector hx="-1" hy="1"/>
	<vector hx="-2" hy="1"/>
	<vector hx="-1" hy="-2"/>

	<!-- second ring A -->

	<vector hx="0" hy="-3"/>
	<vector hx="3" hy="0"/>
	<vector hx="3" hy="3"/>
	<vector hx="0" hy="3"/>
	<vector hx="-3" hy="0"/>
	<vector hx="-3" hy="-3"/>

	<!-- second ring B -->

	<vector hx="2" hy="-2"/>
	<vector hx="4" hy="2"/>
	<vector hx="2" hy="4"/>
	<vector hx="-2" hy="2"/>
	<vector hx="-4" hy="-2"/>
	<vector hx="-2" hy="-4"/>

      </locations>
    </terrain>

